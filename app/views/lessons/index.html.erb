<hr>
<div class="login">
  <div class="container">
    <div class="card">
      <h1>Ruby Lessons</h1>
      <%= link_to 'New Lesson', new_lesson_path if logged_in?(:admin) %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete if logged_in?(:admin) %>

      <hr>

        <% @lessons.each do |lesson| %>
          <div class="container">
            <div class="col-md-12">
              <h3 class="lesson-title">Lesson: <%= link_to lesson.title.titleize, lesson %></h3>
              <td><%= link_to 'Edit', edit_lesson_path(lesson) if logged_in?(:admin) %></td>
              <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:admin)%></td>
            </div>
          </div>
          <hr>
        <% end %>
        <%= link_to 'Certificate', certificate_path if Lesson.last if logged_in?(:admin, :user) %>
    </div>
  </div>    
</div>
<hr>
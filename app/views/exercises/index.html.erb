<h1>Ruby Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Code</th>
      <th>Notes</th>
      <th>Date</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.assignment %></td>
        <td><%= exercise.code %></td>
        <td><%= exercise.notes %></td>
        <td><%= exercise.created_at.strftime("%b %d, %Y") %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) if logged_in?(:admin, :user) %></td>
        <td><%= link_to 'Delete', exercise, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:admin, :user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

